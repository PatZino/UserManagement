@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>List of Products</h2>
<a asp-action="AddProd" class="btn btn-sm btn-primary">Add Product</a>
<a asp-action="GetProd" class="btn btn-sm btn-secondary">Get Product</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>ID</th><th>Product Name</th><th>Product Category</th><th>Quantity Available</th><th>Update</th><th>Delete</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.ProdName</td>
                <td>@r.ProdCat</td>
                <td>@r.QtyAvail</td>
                <td>
                    <a asp-action="UpdateTodo" asp-route-id="@r.Id" class="btn btn-info">UPD</a>
                </td>
                <td>

                    <form asp-action="DeleteTodo" asp-route-id="@r.Id" method="post">

                        <input type="hidden" value="@r.Id" name="id" />
                        <button type="submit" class="btn btn-danger">Del</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

